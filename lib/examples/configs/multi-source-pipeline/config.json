{
  "server_core": {
    "id": "multi-source-pipeline",
    "priority_queue_capacity": 20000,
    "dispatch_buffer_capacity": 2000
  },
  "sources": [
    {
      "id": "sensor-stream",
      "source_type": "mock",
      "auto_start": true,
      "data_type": "sensor",
      "interval_ms": 1000,
      "bootstrap_provider": {
        "type": "scriptfile",
        "file_paths": ["examples/data/sensor_data.jsonl"]
      }
    },
    {
      "id": "user-data",
      "source_type": "mock",
      "auto_start": true,
      "data_type": "person",
      "interval_ms": 10000,
      "bootstrap_provider": {
        "type": "scriptfile",
        "file_paths": ["/data/users.jsonl"]
      }
    },
    {
      "id": "event-stream",
      "source_type": "mock",
      "auto_start": true,
      "data_type": "event",
      "interval_ms": 2000
    }
  ],
  "queries": [
    {
      "id": "high-temp-alert",
      "query": "MATCH (s:SensorReading) WHERE s.temperature > 80 RETURN s",
      "queryLanguage": "Cypher",
      "sources": ["sensor-stream"],
      "auto_start": true,
      "priority_queue_capacity": 50000
    },
    {
      "id": "user-activity",
      "query": "MATCH (u:Person)-[:TRIGGERED]->(e:Event) RETURN u, e",
      "queryLanguage": "Cypher",
      "sources": ["user-data", "event-stream"],
      "auto_start": true
    },
    {
      "id": "sensor-summary",
      "query": "MATCH (s:SensorReading) RETURN s.location, avg(s.temperature) as avg_temp",
      "queryLanguage": "Cypher",
      "sources": ["sensor-stream"],
      "auto_start": true
    }
  ],
  "reactions": [
    {
      "id": "critical-alert-webhook",
      "reaction_type": "log",
      "queries": ["high-temp-alert"],
      "auto_start": true,
      "priority_queue_capacity": 100000,
      "log_level": "warn"
    },
    {
      "id": "activity-analytics",
      "reaction_type": "log",
      "queries": ["user-activity"],
      "auto_start": true,
      "log_level": "info"
    },
    {
      "id": "dashboard-feed",
      "reaction_type": "log",
      "queries": ["sensor-summary"],
      "auto_start": true,
      "log_level": "debug"
    }
  ]
}
