{
  "server_core": {
    "id": "file-bootstrap-source",
    "priority_queue_capacity": 10000,
    "dispatch_buffer_capacity": 1000
  },
  "sources": [
    {
      "id": "user-data-source",
      "source_type": "mock",
      "auto_start": true,
      "data_type": "person",
      "interval_ms": 5000,
      "bootstrap_provider": {
        "type": "scriptfile",
        "file_paths": ["/data/users.jsonl"]
      }
    }
  ],
  "queries": [
    {
      "id": "user-monitor",
      "query": "MATCH (n:Person) WHERE n.age > 25 RETURN n",
      "queryLanguage": "Cypher",
      "sources": ["user-data-source"],
      "auto_start": true
    }
  ],
  "reactions": [
    {
      "id": "user-webhook",
      "reaction_type": "log",
      "queries": ["user-monitor"],
      "auto_start": true,
      "log_level": "info"
    }
  ]
}