{
  "server_core": {
    "id": "basic-mock-source-server"
  },
  "sources": [
    {
      "id": "mock-sensor-data",
      "source_type": "mock",
      "auto_start": true,
      "data_type": "sensor",
      "interval_ms": 2000,
      "bootstrap_provider": {
        "type": "scriptfile",
        "file_paths": ["examples/data/sensor_small.jsonl"]
      }
    }
  ],
  "queries": [
    {
      "id": "sensor-monitor",
      "query": "MATCH (n:SensorReading) RETURN n",
      "queryLanguage": "Cypher",
      "sources": ["mock-sensor-data"],
      "auto_start": true
    }
  ],
  "reactions": [
    {
      "id": "sensor-logger",
      "reaction_type": "log",
      "queries": ["sensor-monitor"],
      "auto_start": true,
      "log_level": "info"
    }
  ]
}