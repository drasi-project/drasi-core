{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "log_level": "info",
    "max_connections": 1000,
    "shutdown_timeout_seconds": 30,
    "disable_persistence": false
  },
  "sources": [
    {
      "id": "mock-sensor-data",
      "source_type": "mock",
      "auto_start": true,
      "properties": {
        "data_type": "sensor",
        "interval_ms": 2000,
        "initial_count": 5
      },
      "bootstrap_provider": {
        "type": "mock",
        "initial_count": 10,
        "data_type": "sensor"
      }
    }
  ],
  "queries": [
    {
      "id": "sensor-monitor",
      "query": "MATCH (n:SensorReading) RETURN n",
      "queryLanguage": "cypher",
      "sources": ["mock-sensor-data"],
      "auto_start": true,
      "properties": {
        "description": "Monitor all sensor readings"
      }
    }
  ],
  "reactions": [
    {
      "id": "sensor-logger",
      "reaction_type": "log",
      "queries": ["sensor-monitor"],
      "auto_start": true,
      "properties": {
        "log_level": "info",
        "format": "json"
      }
    }
  ]
}