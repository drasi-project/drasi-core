{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "log_level": "info",
    "max_connections": 1000,
    "shutdown_timeout_seconds": 30
  },
  "sources": [
    {
      "id": "source1",
      "source_type": "mock",
      "auto_start": true,
      "properties": {
        "data_type": "sensor",
        "interval_ms": 1000
      }
    }
  ],
  "queries": [
    {
      "id": "cypher-query-explicit",
      "query": "MATCH (n:Person) WHERE n.age > 25 RETURN n.name, n.age",
      "queryLanguage": "Cypher",
      "sources": ["source1"],
      "auto_start": true
    },
    {
      "id": "cypher-query-default",
      "query": "MATCH (p:Person)-[:KNOWS]->(friend) RETURN p, friend",
      "sources": ["source1"],
      "auto_start": true
    },
    {
      "id": "gql-query",
      "query": "MATCH (n:Person) RETURN n.name, n.email",
      "queryLanguage": "GQL",
      "sources": ["source1"],
      "auto_start": true
    },
    {
      "id": "gql-complex-query",
      "query": "MATCH (p:Person)-[r:WORKS_AT]->(c:Company) WHERE c.industry = 'Technology' RETURN p.name AS person, c.name AS company, r.since AS startDate",
      "queryLanguage": "GQL",
      "sources": ["source1"],
      "auto_start": true
    }
  ],
  "reactions": [
    {
      "id": "log-reaction",
      "reaction_type": "log",
      "queries": [
        "cypher-query-explicit",
        "cypher-query-default",
        "gql-query",
        "gql-complex-query"
      ],
      "auto_start": true,
      "properties": {
        "log_level": "info"
      }
    }
  ]
}